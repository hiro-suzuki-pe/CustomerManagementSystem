@page
@model CustomerManagementSystem.Pages.Company.EditModel

@{
    ViewData["Title"] = "編集";
}
<h1>顧客情報（編集）</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="tbl_company.Id" />
            <div class="form-group">
                <label asp-for="tbl_company.company_name" class="control-label"></label>
                <input asp-for="tbl_company.company_name" class="form-control" />
                <span asp-validation-for="tbl_company.company_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tbl_company.company_kana" class="control-label"></label>
                <input asp-for="tbl_company.company_kana" class="form-control" />
                <span asp-validation-for="tbl_company.company_kana" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="tbl_company.delete_flag" /> @Html.DisplayNameFor(model => model.tbl_company.delete_flag)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">一覧に戻る</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
