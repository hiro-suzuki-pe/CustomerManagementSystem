@page
@model CustomerManagementSystem.Pages.Company.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>vw_customer</h4>
    <hr />

    <table class="details">
        <tr>
            <td class="col-sm-2">会社ID</td>
            <td class="col-sm-10">@Html.DisplayFor(model => model.tbl_company.Id)</td>
        </tr>
        <tr>
            <td class="col-sm-2">会社名</td>
            <td class="col-sm-10">
                <a asp-page="./Details" asp-route-id="@Model.tbl_company?.Id">
                    @Html.DisplayFor(model => model.tbl_company.company_name)
                </a>
            </td>
        </tr>
        <tr>
            <td class="col-sm-2">会社名カナ</td>
            <td class="col-sm-10">@Html.DisplayFor(model => model.tbl_company.company_kana)</td>
        </tr>
        <tr>
            <td class="col-sm-2">削除フラグ</td>
            <td class="col-sm-10">@Html.DisplayFor(model => model.tbl_company.delete_flag)</td>
        </tr>
    </table>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.tbl_company?.Id">編集</a> |
