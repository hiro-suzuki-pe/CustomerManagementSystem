<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 顧客対応管理システム</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CustomerManagementSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="header_container">
                <table cellpadding="0" cellspacing="0" class="auto-style1">
                    <tr>
                        <td>
                            <a asp-area="" asp-page="/Index">
                                <img src="~/images/title.gif" alt="[顧客対応管理システム]"/>
                            </a>
                        </td>
                        <td bgcolor="white">
                            <a asp-area="" asp-page="/Index">
                                <img src="~/images/back.gif" alt="[メニューに戻る]"/>
                            </a>

                        </td>
                        <td bgcolor="#fff8dc">
                            <ul class="navbar-nav flex-grow-1" bgcolor="white">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Index">ホーム</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">プライバシー</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                </table>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

    </div>
    <footer class="border-top footer text-muted">
        <div class="footer_container">
            &copy; ヒロ鈴木技術士オフィス 2022-2023. - 顧客対応管理システム - <a asp-area="" asp-page="/Privacy">プライバシー</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>