@page
@model CustomerManagementSystem.Pages.CustomerView.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            顧客名：
            <input type="text" name="searchCustomer" value="@Model.CurrentFilter" />
            会社名：
            <input type="text" name="searchCompany" value="@Model.CurrentFilter" />
            <input type="checkbox" name="searchMyCustomer" value="@Model.CurrentFilter" />
            自分の顧客のみ
            <input type="submit" value="フィルター実行" class="btn btn-primary" />
        </p>
    </div>    
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-route-sortOrder=""> 顧客ID</a>
            </th>
            <th>
                <a asp-route-sortOrder="CustomerNameSort"> 顧客名</a>
            </th>
            <th>
                <a asp-route-sortOrder="CustomerNameSort"> 顧客名カナ</a>
            </th>
            <th>               
                <a asp-route-sortOrder="CompanyNameSort"> 会社名</a>
            </th>
            <th>部署名 </th>
            <th>役職 </th>
            <th>営業担当者 </th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.vw_customer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.customer_name)</a>
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.customer_kana)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.company_name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.section)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.post)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.staff_name)
            </td>
        </tr>
}
    </tbody>
</table>
