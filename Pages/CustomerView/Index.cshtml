@model CustomerManagementSystem.Pages.CustomerView.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    
</p>

<table class="filter_condition">
    <tr>
        <td>顧客一覧</td>
    </tr>
    <tr>
        <td>検索条件</td>
        <td>顧客名</td>
        <td>
            <input type="text" CssClass="imeOn" name="CustomerNameTextBox" placeholder="顧客名" />
        </td>
        <td>会社名</td>
        <td>
            <input type="text" CssClass="imeOn" name="CompanyNameTextBox" placeholder="会社名" />
        </td>
        <td><input type="checkbox" name="MyCustomerCheckBox"/> type自分の顧客のみ</td>
        <td>
            <input type="button" name="FilterButton" value="フィルター実行" width="110px"/>
        </td>
        <td width="240">
            <a asp-page="Create">新規追加</a>
        </td>
    </tr>
    <tr height="40">
        <td></td>
    </tr>
</table>

<table class="table">
    <thead>
        <tr>
            <th> 顧客ID</th>
            <th> 顧客名</th>
            <th> 顧客名カナ </th>
            <th> 会社名 </th>
            <th> 部署名  </th>
            <th> 役職  </th>
            <th> 営業担当者 </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CustomerView) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                    <a asp-page="./Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.customer_name)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.customer_kana)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.company_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.section)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.post)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.staff_name)
            </td>
        </tr>
}
    </tbody>
</table>
