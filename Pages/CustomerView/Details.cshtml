@page
@model CustomerManagementSystem.Pages.CustomerView.DetailsModel

@{
    ViewData["Title"] = "顧客情報（閲覧）";
}

<h1>顧客情報（閲覧）</h1>

<div>
    <!--
        <h4>vw_customer</h4>
    -->
    <hr />
    <div class="update_info">
        <table>
            <tr>
                <td>最終更新日：</td>
                <td>@Html.DisplayFor(model => model.vw_customer.update_date)</td>
            </tr>
            <tr>
                <td>
                    最終更新者：
                </td>
                <td>
                    @Html.DisplayFor(model => model.vw_customer.update_staff_name)
                </td>
            </tr>
        </table>
    </div>
    <table class="details">
        <tr>
            <td class="col-sm-2">顧客ID</td>
            <td class ="col-sm-10"> @Html.DisplayFor(model => model.vw_customer.Id)</td>
            <td class="col-sm-2">営業担当者</td>
            <td class="col-sm-10"> @Html.DisplayFor(model => model.vw_customer.staff_name)</td>
        </tr>
        <tr>
            <td class="col-sm-2">顧客名カナ</td>
            <td class="col-sm-10"> @Html.DisplayFor(model => model.vw_customer.customer_kana)</td>
            <td class="col-sm-2" column="3">初回訪問日</td>
            <td class="col-sm-10"> @Html.DisplayFor(model => model.vw_customer.first_action_date)</td>
        </tr>
        <tr>
            <td class="col-sm-2">顧客名</td>
            <td class="col-sm-10" colspan="3"> @Html.DisplayFor(model => model.vw_customer.customer_name)</td>
        </tr>
        <tr>
            <td class="col-sm-2">会社名</td>
            <td class="col-sm-10" colspan="3"> @Html.DisplayFor(model => model.vw_customer.company_name)</td>
        </tr>
        <tr>
            <td class="col-sm-2">部署</td>
            <td class ="col-sm-10"> @Html.DisplayFor(model => model.vw_customer.section)</td>
            <td class="col-sm-2">役職</td>
            <td class="col-sm-10"> @Html.DisplayFor(model => model.vw_customer.post)</td>
        </tr>
        <tr>
            <td class="col-sm-2">郵便番号</td>
            <td class="col-sm-10" colspan="3"> @Html.DisplayFor(model => model.vw_customer.zipcode)</td>
        </tr>
        <tr>
            <td class="col-sm-2">住所</td>
            <td class="col-sm-10" colspan="3"> @Html.DisplayFor(model => model.vw_customer.address)</td>
        </tr>
        <tr>
            <td class="col-sm-2">TEL</td>
            <td class="col-sm-10" colspan="3"> @Html.DisplayFor(model => model.vw_customer.tel)</td>
        </tr>
        <tr>
            <td class="col-sm-2">備考</td>
            <td colspan="3"> @Html.DisplayFor(model => model.vw_customer.memo)</td>
        </tr>
    </table>

</div>
<div>
    <a asp-page="../Customer/Edit" asp-route-id="@Model.vw_customer?.Id">編集</a> |
    <a asp-page="./Index">一覧に戻る</a>
</div>
