@page
@model CustomerManagementSystem.Pages.Customer.EditModel

@{
    ViewData["Title"] = "顧客情報（編集）";
}


<h1>顧客情報（編集）</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div>
                <table class="details">
                    <tr>
                        <td class="col-sm-2">顧客ID</td>
                        <td class ="col-sm-10">                            
                            <input type="hidden" asp-for="tbl_customer.Id" />
                            @Html.DisplayFor(model => model.tbl_customer.Id)
                        </td>
                        <td class="col-sm-2">営業担当者</td>
                        <td class="col-sm-10">                
                            <select asp-for="tbl_customer.staffId" asp-items="@Model.StaffSL"></select>
                            <span asp-validation-for="tbl_customer.staffId" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td class="col-sm-2">顧客名カナ</td>
                        <td class="col-sm-10"> 
                            <input asp-for="tbl_customer.customer_kana" class="form-control" />
                            <span asp-validation-for="tbl_customer.customer_kana" class="text-danger"></span>
                        <td class="col-sm-2" column="3">初回訪問日</td>
                        <td class="col-sm-10">               
                            <input asp-for="tbl_customer.first_action_date" class="form-control" />
                            <span asp-validation-for="tbl_customer.first_action_date" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td class="col-sm-2">顧客名</td>
                        <td class="col-sm-10" colspan="3">                 
                            <input asp-for="tbl_customer.customer_name" class="form-control" />
                            <span asp-validation-for="tbl_customer.customer_name" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td class="col-sm-2">会社名</td>
                        <td class="col-sm-10" colspan="3">                
                            <select asp-for="tbl_customer.companyId" asp-items="@Model.CompanySL"></select>
                            <span asp-validation-for="tbl_customer.companyId" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td class="col-sm-2">部署</td>
                        <td class ="col-sm-10">                
                            <input asp-for="tbl_customer.section" class="form-control" />
                            <span asp-validation-for="tbl_customer.section" class="text-danger"></span>
                        </td>
                        <td class="col-sm-2">役職</td>
                        <td class="col-sm-10">               
                            <input asp-for="tbl_customer.post" class="form-control" />
                            <span asp-validation-for="tbl_customer.post" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td class="col-sm-2">郵便番号</td>
                        <td class="col-sm-10" colspan="3">                
                            <input asp-for="tbl_customer.zipcode" class="form-control" />
                            <span asp-validation-for="tbl_customer.zipcode" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td class="col-sm-2">住所</td>
                        <td class="col-sm-10" colspan="3">               
                            <input asp-for="tbl_customer.address" class="form-control" />
                            <span asp-validation-for="tbl_customer.address" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td class="col-sm-2">TEL</td>
                        <td class="col-sm-10" colspan="3">                
                            <input asp-for="tbl_customer.tel" class="form-control" />
                            <span asp-validation-for="tbl_customer.tel" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td class="col-sm-2">備考</td>
                        <td colspan="3">                
                            <input asp-for="tbl_customer.memo" class="form-control" />
                            <span asp-validation-for="tbl_customer.memo" class="text-danger"></span>
                        </td>
                    </tr>
                </table>
                <input type="hidden" asp-for="tbl_customer.input_date" />
                <input type="hidden" asp-for="tbl_customer.input_staff_name" />
                <input type="hidden" asp-for="tbl_customer.update_date" />
                <input type="hidden" asp-for="tbl_customer.update_staff_name" />
                <input type="checkbox" asp-for="tbl_customer.delete_flag" id="customer_delete_flag" />
                <label for="customer_delete_flag">データを削除する場合には，チェックしてから[登録]ボタンをクリックする</label>
            </div>
            <div class="form-group">
                <input type="submit" name="action_button" value="登録" class="btn btn-primary" />
                <input type="submit" name="action_button" value="キャンセル" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">一覧に戻る</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
