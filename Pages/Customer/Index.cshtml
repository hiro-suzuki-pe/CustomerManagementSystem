@page
@model CustomerManagementSystem.Pages.Customer.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>顧客一覧</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>顧客名 </th>
            <th>顧客名カナ </th>
            <th>会社ID</th>
            <th>部署</th>
            <th>役職</th>
            <th>郵便番号 </th>
            <th>住所 </th>
            <th>TEL</th>
            <th>スタッフID</th>
            <th>初回訪問日</th>
            <th>備考</th>
            <th>入力日</th>
            <th>入力者</th>
            <th>更新日</th>
            <th>更新者</th>
            <th>削除フラグ</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.tbl_customer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.customer_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.customer_kana)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.companyId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.section)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.post)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.zipcode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.staffId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.first_action_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.memo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.input_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.input_staff_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.update_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.update_staff_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.delete_flag)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
