@page
@model CustomerManagementSystem.Pages.Staff.IndexModel

@{
    ViewData["Title"] = "スタッフマスター管理";
}

<h1>スタッフマスター管理</h1>

<p>
    <a asp-page="Create">新規作成</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>担当者名</th>
            <th>ユーザID</th>
            <th>パスワード</th>
            <th>管理者フラグ</th>
            <th>削除フラグ</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.tbl_staff) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.staff_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.userId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.admin_flag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.delete_flag)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">編集</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">詳細</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">削除</a>
            </td>
        </tr>
}
    </tbody>
</table>
